<div class="col-lg-8">
  <% @posts.each do |post| %>
    <div class="article">
      <h2><%= post.title %></h2>
      <p><%= post.created_at %></p>
      <p><%= truncate(post.body, length: 50) %></p>
      <p><a class="btn btn-default" href="/posts/<%= post.id %>" role="buttton">続きを読む</a></p>
    </div>
  <% end %>
</div>

<div class="col-lg-4">
  <div class="thumnail">
    <img src="<%= Author.first.image_url %>" alt="著者イメージ">
    <div class="capttion">
      <h3><%= Author.first.name %></h3>
      <p><%= Author.first.description %></p>
    </div>
  </div>
  <div class="list-group">
    <% @posts.each do |post| %>
    <a href="/posts/<%= post.id %>" class="list-group-item"><%= post.title %></a>
    <% end %>
  </div>
</div>