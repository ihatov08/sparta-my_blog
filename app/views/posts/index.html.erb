<div class="col-lg-8">
  <% @posts.each do |post| %>
    <div class="article">
      <h2>タイトル：<%= post.title %></h2>
      <p>カテゴリ：<%= post.category %></p>
      <p>作成日：<%= post.created_at %></p>
      <p><%= truncate(post.body, length: 50) %></p>
      <p><a class="btn btn-default" href="/posts/<%= post.id %>" role="buttton">続きを読む</a></p>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>

<div class="col-lg-4">
  <div class="thumnail">
    <img src="<%= Author.first.image_url %>" alt="著者イメージ">
    <div class="capttion">
      <h3>著者名：<%= Author.first.name %></h3>
      <p>詳細：<%= Author.first.description %></p>
    </div>
  </div>
  <div class="list-group">
    <h3>最新記事一覧</h3>
    <% @posts.each_with_index do |post, index| %>
    <% if index >= 5
         break
       end
    %>
    <a href="/posts/<%= post.id %>" class="list-group-item"><%= post.title %></a>
    <% end %>
  </div>

  <div class="list-group">
    <h3>最新コメント一覧</h3>
    <% @comments.each_with_index do |comment, index| %>
    <% if index >= 5
         break
       end
    %>
    <a href="/posts/<%= comment.post_id %>" class="list-group-item"><%= comment.body %></a>
    <% end %>
  </div>
</div>